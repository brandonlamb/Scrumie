function prepareTask(stdClass $task) {
    $taskHelper = '
        <div id="%s" class="task round4 draggable">
            <div class="editable body">%s</div>
            <span title="Estimation" class="estimation">%s</span>
            &nbsp;
            <span title="Done" class="done">%s</span>
            &nbsp;
            <span class="owner" title="Owner" style="float: right;">%s</span>
        </div>';

    return sprintf($taskHelper, $task->id_task, $task->body, $task->estimation, $task->done, $task->owner);
}
